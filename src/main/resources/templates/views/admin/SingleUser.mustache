<div style="background-color: #02a1b3; color: #FFFFFF ; padding: 20px;">
    <h1>User: {{{id}}}</h1>
    <style>
        table {
            color: #FFFFFF  ;
        }

        table tr td {
            padding: 0 25px;
        }
        input[type=checkbox] {
            width: 20px;
            height: 20px;
        }
    </style>
    <table>
        <tr>
            <td><strong>First Name:</strong></td>
            <td>{{{firstName}}}</td>
        </tr>
        <tr>
            <td><strong>Middle Name:</strong></td>
            <td>{{{middleName}}}</td>
        </tr>
        <tr>
            <td><strong>Last Name:</strong></td>
            <td>{{{lastName}}}</td>
        </tr>
        <tr>
            <td><strong>Gender:</strong></td>
            <td>{{{gender}}}</td>
        </tr>
        <tr>
            <td><strong>Username:</strong></td>
            <td>{{{username}}}</td>
        </tr>
        <tr>
            <td><strong>Email:</strong></td>
            <td>{{{email}}}</td>
        </tr>
        <tr>
            <td><strong>Date of Birth:</strong></td>
            <td>{{{dateOfBirth}}}</td>
        </tr>
        <tr>
            <td><strong>Token:</strong></td>
            <td>{{{token}}}</td>
        </tr>
        <tr>
            <td><strong>Token Generated:</strong></td>
            <td>{{{tokenGeneratedDate}}}</td>
        </tr>
        <tr>
            <td><strong>Latest Login:</strong></td>
            <td>{{{latestLogin}}}</td>
        </tr>
        <tr>
            <td><strong>Failed Login Attempts:</strong></td>
            <td>{{{failedLoginAttempts}}}</td>
        </tr>
        <tr>
            <td><strong>Account status:</strong></td>
            <td>{{{accountStatus}}}</td>
        </tr>
        <tr>
            <td><strong>Account locked:</strong></td>
            <td><input type="checkbox" disabled {{#isAccountLocked}}checked{{/isAccountLocked}}></td>
        </tr>
        <tr>
            <td><strong>Banned:</strong></td>
            <td><input type="checkbox" disabled {{#isBanned}}checked{{/isBanned}}></td>
        </tr>
        <tr>
            <td><strong>Subscribed:</strong></td>
            <td><input type="checkbox" disabled {{#isSubscribed}}checked{{/isSubscribed}}></td>
        </tr>
        <tr>
            <td><strong>Authorities:</strong></td>
            <td>
                {{#authorities}}
                    {{role}}{{^last}}, {{/last}}
                {{/authorities}}
            </td>
        </tr>
    </table>
</div>